package solve.com;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;

public class Main {

	public static void main(String[] args) throws IOException {
		
		BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
		String str = br.readLine();
		int res = 0;
		
		String[] crta = new String[8];
		crta[0] = "c=";
		crta[1] = "c-";
		crta[2] = "z=";
		crta[3] = "d-";
		crta[4] = "lj";
		crta[5] = "nj";
		crta[6] = "s=";
 		crta[7] = "dz=";
		
		for(int i = 0; i < str.length(); i++) {
			for(int j = 0; j < crta.length; j++) {
				if(crta[j].equals(str.charAt(i) + "" + str.charAt(i + 1))) {
					res++;
					i++;
				} else if(crta[j].equals(str.charAt(i) + "" + str.charAt(i + 1) + "" + str.charAt(i + 2))) {
					res++;
					i += 2;
				}
			}
		}
		
		System.out.print(res);
		
	}

}