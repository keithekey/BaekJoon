package solve.com;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.util.Arrays;
import java.util.StringTokenizer;

public class Main {
	
	public static void main(String[] args) throws NumberFormatException, IOException {
		BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
		
		int n = Integer.parseInt(br.readLine());
		int[][] timetable = new int[n][2];
		int res = 0;
		int curTime = 0;
		
		for(int i = 0; i < n; i++) {
			StringTokenizer st = new StringTokenizer(br.readLine());
			timetable[i][0] = Integer.parseInt(st.nextToken()); //시작 시간
			timetable[i][1] = Integer.parseInt(st.nextToken()); //종료 시간
		}
		
		Arrays.sort(timetable, (t1, t2) -> t1[0] - t2[0]);
		Arrays.sort(timetable, (t1, t2) -> t1[1] - t2[1]);	
		
		for(int j = 0; j < n; j++) {
			System.out.println(Arrays.toString(timetable[j]));
			
			if(timetable[j][0] > curTime) {
				res++;
				curTime = timetable[j][1];
			}
			
		}
		
		System.out.println(res);
		
	}
	
}